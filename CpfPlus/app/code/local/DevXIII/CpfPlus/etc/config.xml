<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<modules>
		<DevXIII_CpfPlus>
			<version>0.1.0</version>
		</DevXIII_CpfPlus>
	</modules>
	
	<!-- Meu template customizado para o adminhtml -->
	<stores>
		<admin>
			<design>
				<theme>
					<template>custom</template>
				</theme>
			</design>
		</admin>
	</stores>
	
	<global>
		
		<!-- Begin: Definindo blocks do m贸dulo -->
		<blocks>
			
			<cpfplus>
				<class>DevXIII_CpfPlus_Block</class>
			</cpfplus>
			
			<adminhtml>
				<rewrite>
					<sales_items_abstract>DevXIII_CpfPlus_Block_Sales_Items_Abstract</sales_items_abstract>
				</rewrite>
			</adminhtml>

		</blocks>
		<!-- End: Definindo blocks do m贸dulo -->

		<!-- Begin: Definindo models do m贸dulo -->
		<models>
			<cpfplus>
				<class>DevXIII_CpfPlus_Model</class>
			</cpfplus>
		</models>
		<!-- End: Definindo models do m贸dulo -->

		<events>
			<checkout_cart_product_add_after>
				<observers>
					<cpfplus>
						<type>singleton</type>
						<class>cpfplus/observer</class>
						<method>convertPassengers</method>
					</cpfplus>
				</observers>
			</checkout_cart_product_add_after>
		</events> 
		
		<resources>
			<cpfplus_setup>
				
				<setup>
					<module>DevXIII_CpfPlus</module>
					<class>DevXIII_CpfPlus_Model_Resource_Setup</class>
				</setup>
				<connection>
					<use>directory_setup</use>
				</connection>
				
			</cpfplus_setup>
		</resources>
	</global>
	
	<frontend>
		
		<!-- Begin: Sobrescrevendo o controller do checkout -->
		<routers>
			<checkout>
				<args>
					<modules>
						<DevXIII_CpfPlus before="Mage_Checkout">DevXIII_CpfPlus</DevXIII_CpfPlus>
					</modules>
				</args>
			</checkout>
		</routers>
		<!-- End: Sobrescrevendo o controller do checkout -->
		
		<layout>
			<updates>
				<cpfplus>
					<file>cpfplus.xml</file>
				</cpfplus>
			</updates>
		</layout>
	</frontend>
</config>
