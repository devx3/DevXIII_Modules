<?xml version="1.0"?>
<config>
    <modules>
        <DevXIII_CarrierExpress>
            <version>0.9.2</version>
        </DevXIII_CarrierExpress>
    </modules>
    
    <global>
        <helpers>
            <devxiii_carrierexpress>
                <class>DevXIII_CarrierExpress_Helper</class>
            </devxiii_carrierexpress>
        </helpers>
        <resources>
            
            <devxiii_carrierexpress_setup>
                <setup>
                    <module>DevXIII_CarrierExpress</module>
                    <class>DevXIII_CarrierExpress_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
                
            </devxiii_carrierexpress_setup>
        </resources>
        
        <models>
            <devxiii_carrierexpress>
                <class>DevXIII_CarrierExpress_Model</class>
            </devxiii_carrierexpress>
        </models>
        <sales>
            <shipping>
                <carriers>
                    <devxiii_carrierexpress>
                        <class>DevXIII_CarrierExpress_Model_Carrier_ShippingMethod</class>
                    </devxiii_carrierexpress>
                </carriers>
            </shipping>
        </sales>
    </global>
    
    <default>
        <carriers>
            <devxiii_carrierexpress>
                <active>1</active>
                <model>DevXIII_CarrierExpress_Model_Carrier_ShippingMethod</model>
                <title>Transporte</title>
            </devxiii_carrierexpress>
        </carriers>
    </default>
</config>
