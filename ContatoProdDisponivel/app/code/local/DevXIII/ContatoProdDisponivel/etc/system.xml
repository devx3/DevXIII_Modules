	        				<show_in_default>1</show_in_default>
				            <show_in_website>1</show_in_website>
				            <show_in_store>1</show_in_store>
	        			</from_pass>
	        			<recipients translate="label">
	        				<label>Destinatários</label>
	        				<comment>Emails de destino (separados por ",")</comment>
